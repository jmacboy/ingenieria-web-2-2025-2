<%- include('../components/header.ejs') %>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h1>Foto de perfil</h1>
                        </div>
                        <form action="" method="POST" enctype="multipart/form-data">
                            <img src="/uploads/estudiantes/<%= estudiante.id %>.jpg" alt="Foto de perfil"
                                class="img-thumbnail" style="max-height: 200px;" />
                            <div class=" mb-2">
                                <label class="form-label" for="nombre">Foto de perfil:</label>
                                <input class="form-control" type="file" id="fotoPerfil" name="fotoPerfil" required>
                            </div>
                            <button class="btn btn-primary" type="submit">Subir foto de perfil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>