<%- include('../components/header.ejs') %>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h1>Inscripción de materias</h1>
                        </div>
                        <form action="" method="POST">
                            Inscripción para el estudiante: <strong>
                                <%= estudiante.persona.nombre %>
                                    <%= estudiante.persona.apellido %>
                            </strong>
                            <% materiaArr.forEach(materia=> { %>
                                <div class="mb-2">

                                    <input class="form-check-input" type="checkbox" id="idMateria" name="idMateria"
                                        value="<%= materia.id %>">
                                    <label class="form-check-label" for="idMateria">
                                        <%= materia.nombre %>:
                                    </label>
                                </div>
                                <% }) %>
                                    <button class="btn btn-primary" type="submit">Guardar Materia</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>