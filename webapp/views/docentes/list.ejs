<%- include('../components/header.ejs') %>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h1>Lista de Docentes</h1>
                        </div>
                        <% if (docenteArr.length==0) { %>
                            <p>No hay docentes registradas.</p>
                            <% } else { %>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Apellido</th>
                                                <th>Edad</th>
                                                <th>Ciudad</th>
                                                <th>Fecha de Nacimiento</th>
                                                <th>Teléfono</th>
                                                <th>Email</th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% docenteArr.forEach(docente=> { %>
                                                <tr>
                                                    <td>
                                                        <img src="/uploads/docentes/<%= docente.id %>.jpg"
                                                            alt="Foto de perfil"
                                                            onclick="changeImage('<%= docente.id %>')"
                                                            data-bs-toggle="modal" data-bs-target="#photoModal"
                                                            style="height: 50px; cursor: pointer;" />
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.id %>
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.nombre %>
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.apellido %>
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.edad %>
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.ciudad %>
                                                    </td>
                                                    <td>
                                                        <%= docente.persona.fechaNacimiento.toISOString().split('T')[0]
                                                            %>
                                                    </td>
                                                    <td>
                                                        <%= docente.telefono %>
                                                    </td>
                                                    <td>
                                                        <%= docente.email %>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-success"
                                                            href="/docentes/<%= docente.id %>/profile">Foto de
                                                            Perfil</a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-primary"
                                                            href="/docentes/<%= docente.id %>">Editar</a>
                                                    </td>
                                                    <td>
                                                        <form
                                                            onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta docente?');"
                                                            method="POST" action="/docentes/<%= docente.id %>/delete">
                                                            <button class="btn btn-danger"
                                                                type="submit">Eliminar</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } %>
                                    <!-- Modal -->
                                    <div class="modal fade" id="photoModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <img id="imgProfilePicture" src="" alt="Foto de perfil"
                                                        class="img-thumbnail">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function changeImage(docenteId) {
            const imgElement = document.getElementById('imgProfilePicture');
            imgElement.src = `/uploads/docentes/${docenteId}.jpg`;
        }
    </script>
    <%- include('../components/footer.ejs') %>