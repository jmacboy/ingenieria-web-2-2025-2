<%- include('../components/header.ejs') %>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h1>Formulario de docentes</h1>
                        </div>
                        <form action="" method="POST">
                            <div class="mb-2">
                                <label class="form-label" for="nombre">Nombre:</label>
                                <input class="form-control" type="text" id="nombre" name="nombre" required
                                    value="<%= docente?.persona.nombre%>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="apellido">Apellido:</label>
                                <input class="form-control" type="text" id="apellido" name="apellido" required
                                    value="<%= docente?.persona.apellido%>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="edad">Edad:</label>
                                <input class="form-control" type="number" id="edad" name="edad" required
                                    value="<%= docente?.persona.edad %>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="ciudad">Ciudad:</label>
                                <input class="form-control" type="text" id="ciudad" name="ciudad" required
                                    value="<%= docente?.persona.ciudad  %>">
                            </div>

                            <div class="mb-2">
                                <label class="form-label" for="fechaNacimiento">Fecha de Nacimiento:</label>
                                <input class="form-control" type="date" id="fechaNacimiento" name="fechaNacimiento"
                                    required
                                    value="<%= docente?.persona.fechaNacimiento.toISOString().split('T')[0] %>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="telefono">Tel√©fono:</label>
                                <input class="form-control" type="text" id="telefono" name="telefono" required
                                    value="<%= docente?.telefono  %>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="email">Email:</label>
                                <input class="form-control" type="email" id="email" name="email" required
                                    value="<%= docente?.email  %>">
                            </div>
                            <button class="btn btn-primary" type="submit">Guardar Persona</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../components/footer.ejs') %>