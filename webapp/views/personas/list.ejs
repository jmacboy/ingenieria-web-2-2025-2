<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Lista de Personas</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Ciudad</th>
                <th>Fecha de Nacimiento</th>
            </tr>
        </thead>
        <tbody>
            <% personaArr.forEach(persona=> { %>
                <tr>
                    <td>
                        <%= persona.id %>
                    </td>
                    <td>
                        <%= persona.nombre %>
                    </td>
                    <td>
                        <%= persona.apellido %>
                    </td>
                    <td>
                        <%= persona.edad %>
                    </td>
                    <td>
                        <%= persona.ciudad %>
                    </td>
                    <td>
                        <%= persona.fechaNacimiento.toISOString().split('T')[0] %>
                    </td>
                    <td>
                        <a href="/personas/<%= persona.id %>">Editar</a>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>
</body>

</html>